<!DOCTYPE html>
<html>
  <head>
    <title>PORTFOLIO</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Kosugi&display=swap" rel="stylesheet">
  </head>

  <body class="bg_color">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container">
          <nav class="nav navbar-left">
            <% if user_signed_in? %>
              <%= link_to ideas_path, class:"btn btn-link" do %>
                <%= image_tag 'logo.png', size: '150x60' %>
              <% end %>
            <% else %>
              <%= link_to root_path, class:"btn btn-link" do %>
                <%= image_tag 'logo.png', size: '150x60' %>
              <% end %>
            <% end %>
          </nav>
          <nav>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to ideas_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-home"> ホーム</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_idea_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-lightbulb"> アイデアを登録</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to user_path(current_user), class:"btn btn-link text-white my-auto" do %>
                    <%= attachment_image_tag(current_user, :profile_image, size: "25x25", fallback: "no_image.jpg") %>
                    <span class="text-bold my-auto"> マイページ</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link text-white" do %>
                    <span class="fas fa-sign-out-alt"> ログアウト</span>
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to home_about_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-link"> サイトについて</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-user-plus"> 新規登録</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_session_path, class:"btn btn-link text-white" do %>
                    <span class="fas fa-sign-in-alt"> ログイン</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </nav>
        </div>
      </nav>
      <div class="mb-4 bg_color">
        <p class="notice"><%= notice %></p>
      </div>
    </header>
    <div class="bg_color">
      <%= yield %>
    </div>
    <footer>
        <div class="row bg-dark">
          <div class="mx-auto text-white">
              <p class="mt-3">IdeaBank created by K.Kanayama</p>
          </div>
        </div>
      </nav>
    </footer>
  </body>
</html>
