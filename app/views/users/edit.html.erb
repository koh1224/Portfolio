<div class="container mb-3">
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center">
      <% if @user.errors.any? %>
        <div>
          <%= @user.errors.count %>件のエラーが発生しました。
        </div>
        <% @user.errors.full_messages.each do |message| %>
          <div>
            <%= message %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class="col-md-4 offset-md-4 text-center">
      <h3 class="text-bold">ユーザー編集</h3>
      <%= form_with model: @user, local:true do |f| %>
        <div class="form-group text-center mt-4">
          <div class='mb-1'><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "image", size: "120x120" %></div></br>
          <h5>プロフィール画像</h5>
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group text-center">
          <h5>User name</h5>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group text-center">
          <h5>Email</h5>
          <%= f.text_field :email, class: "form-control name" %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "編集内容を保存", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>