<div class='container'>
  <div class='row mt-4 mb-2'>
      <h1>User info</h1>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-3 px-0 px-2 py-2">
      <table class="table ml-5">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "image", size: "100x100" %></td>
        </tr>
        <tr>
          <th>User Name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <% if @user == current_user %>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          <% end %>
        </tr>
      </table>
      <div class="mb-3 ml-5">
        <% if @user == current_user %>
          <%= link_to "編集する", edit_user_path, class:"btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <% @ideas.each do |idea| %>
        <div class='col-1 mb-4'>
          <%= link_to idea_path( idea.id ) do %>
            <%= attachment_image_tag idea, :image, size: "100x100", fallback: "no_idea_image.jpg" %>
          <% end %>
          </br>
          <h4><%= link_to idea.idea, idea_path(idea), class: "link-black" %></h4>
          <h5><%= idea.body %></h5>
          <div>
            <% if idea.favorited_by?(current_user) %>
              <h5>
                <%= link_to idea_favorites_path(idea), method: :delete do %>
                  <span class="fas fa-heart"><%= idea.favorites.count %></span>
                <% end %>
              </h5>
            <% else %>
                <h5>
                  <%= link_to idea_favorites_path(idea), method: :post do %>
                    <span class="fas fa-heart"><%= idea.favorites.count %></span>
                  <% end %>
                </h5>
            <% end %>
          </div>
        </div>
      <% end %>
      <hr>
    </div>
  </div>
</div>