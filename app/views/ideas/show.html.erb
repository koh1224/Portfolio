<h1>idea show</h1>
<table class='table'>
  <tr>
    <td><%= link_to user_path(@ideafind.user) do %>
      <%= attachment_image_tag(@ideafind.user, :profile_image, size: "250x250", fallback: "no_image.jpg") %><br>
      <%= @ideafind.user.name %>
      <% end %>
    </td>
    <td><%= link_to @ideafind.idea, idea_path(@ideafind) %></td>
    <td><%= @ideafind.body %></td>
    <td>
      <% if @ideafind.favorited_by?(current_user) %>
        <h5>
          <%= link_to idea_favorites_path(@ideafind), method: :delete do %>
            <span class="fas fa-heart"><%= @ideafind.favorites.count %></span>
          <% end %>
        </h5>
      <% else %>
          <h5>
            <%= link_to idea_favorites_path(@ideafind), method: :post do %>
              <span class="fas fa-heart"><%= @ideafind.favorites.count %></span>
            <% end %>
          </h5>
      <% end %>
    </td>
    <% if @ideafind.user_id == current_user.id %>
      <td><%= link_to 'Edit', edit_idea_path(@ideafind), class: "btn btn-sm btn-success edit_idea_#{@ideafind.id}" %></td>
      <td><%= link_to 'Destroy', idea_path(@ideafind), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_idea_#{@ideafind.id}"%></td>
    <% end %>
  </tr>
</table>