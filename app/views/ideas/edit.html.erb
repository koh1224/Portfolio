<div class="container mb-3">
  <div class="row">
    <div class="col-md-4 offset-md-4 text-center">
      <% if @idea.errors.any? %>
      <div class="text-bold">
        <%= @idea.errors.count %>件のエラーが発生しました。
      </div>
        <% @idea.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-md-4 offset-md-4 text-center">
  		<h2 class="text-center text-bold">アイデア編集</h2>
  		<hr>
  		<%= form_with model:@idea, local:true do |f| %>
        <div class="form-group text-center">
        <h5>アイデアイメージ</h5>
        <%= f.attachment_field :image %>
        </div>
        <div class="form-group text-center">
          <h5>アイデア</h5>
          <%= f.text_field :idea, class: 'form-control idea_idea' %>
        </div>
        <div class="form-group text-center">
          <h5>コメント</h5>
          <%= f.text_area :body, class: 'form-control idea_body' %>
        </div>
        <div class="form-group text-center">
          <h5>Pinterest URL</h5>
          <%= f.text_field :url, class: 'form-control idea_url' %>
        </div>
        <div class="form-group text-center">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
      <hr>
    </div>
  </div>
</div>