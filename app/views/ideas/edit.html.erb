<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h2>アイデア編集</h2>
  		<%= form_with model:@idea, local:true do |f| %>
        <div class="form-group">
          <%= f.label :image %></br>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :idea %>
          <%= f.text_field :idea, class: 'form-control idea_idea' %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :body, class: 'form-control idea_body' %>
        </div>
        <div class="form-group">
          <%= f.label :Pinterest_URL %>
          <%= f.text_area :url, class: 'form-control idea_url' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>